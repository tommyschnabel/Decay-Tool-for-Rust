<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/foundation_type_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foundation_type_label"/>

    <Spinner
        android:id="@+id/foundation_type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/log_off_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_off_time_label"/>

    <TimePicker
        android:id="@+id/log_off_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>